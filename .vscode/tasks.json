{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "init",
            "type": "shell",
            "command": "sudo -E env PATH=$PATH bash ${workspaceFolder}/build.sh init"
        },
        {
            "label": "cmake",
            "type": "shell",
            "command": "cd ${workspaceFolder}/build && cmake ..",
            "dependsOn": [
                "gen_parser"
            ]
        },
        {
            "label": "make",
            "type": "shell",
            "command": "cd ${workspaceFolder}/build && make -j12",
            "dependsOn": [
                "cmake"
            ]
        },
        {
            "label": "build_debug",
            "type": "shell",
            "command": "bash build.sh debug --make -j12",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "gen_parser"
            ]
        },
        {
            "label": "build_release",
            "type": "shell",
            "command": "bash build.sh release --make -j12",
            "dependsOn": [
                "gen_parser"
            ]
        },
        {
            "label": "gen_parser",
            "type": "shell",
            "command": "cd ${workspaceFolder}/src/observer/sql/parser && bash gen_parser.sh"
        }
    ]
}